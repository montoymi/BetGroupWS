<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Team">

    <resultMap id="selectResult" type="Team">
        <result property="teamId" column="id"/>
        <result property="sportId" column="sport_id"/>
        <result property="teamName" column="team_name"/>
        <result property="enabled_flag" column="status"/>
        <result property="image" column="image"/>
    </resultMap>

    <insert id="insert" parameterType="Team" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO person (
        firstName)
        VALUES (
        #{firstName})
    </insert>

    <update id="update" parameterType="Team">
        UPDATE person
        SET
        firstName = #{firstName}
        WHERE id = #{id}
    </update>

    <select id="selectById" parameterType="map" resultMap="selectResult">
        SELECT
        id,
        firstName
        FROM person
        WHERE id = #{id}
    </select>

</mapper>